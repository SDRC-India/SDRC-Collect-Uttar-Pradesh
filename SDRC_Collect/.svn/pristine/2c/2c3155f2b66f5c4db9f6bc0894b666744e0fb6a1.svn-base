<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    tools:context="org.sdrc.collect.uphpmis.android.activities.Facility_activity2"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select State"
        android:id="@+id/textViewState"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerState"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textViewState"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw Map"
        android:id="@+id/buttonMap"
        android:onClick="mapMe"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select District"
        android:id="@+id/textViewDistrict"
        android:layout_below="@+id/spinnerState"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:visibility="invisible"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"

        android:id="@+id/spinnerDistrict"
        android:layout_below="@+id/textViewDistrict"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown" android:visibility="invisible"/>

    <Spinner
        android:id="@+id/spinnerBlock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewBlock"
        android:layout_marginTop="22dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerDistrict"
        android:layout_marginTop="22dp"
        android:text="Select Block"
        android:textAppearance="?android:attr/textAppearanceLarge" android:visibility="invisible"/>

</RelativeLayout>
